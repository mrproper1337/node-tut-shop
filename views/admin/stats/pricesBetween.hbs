<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

<h2>Список товарів в проміжку цін</h2>
<form action="/admin/stats/pricesBetween" method="get">
    <div class="form-group">
        <label for="title"> Проміжок </label>
        <div class="row" style="width: 50%">
            <input id="title1" name="from" type="text" class="col-md-2 " aria-describedby="basic-addon1"
                   value="{{from}}">
            <input id="title2" name="to" type="text" class="col-md-2 " aria-describedby="basic-addon1" value="{{to}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Знайти</button>
    </div>
</form>
<table class="table">
    <thead>
    <tr class="row">
        <th class="col-md-4">Назва</th>
        <th class="col-md-4">Опис</th>
        <th class="col-md-4">Ціна</th>
        </th>
    </tr>
    </thead>
    <tbody>
    {{# each data }}
        <tr class="row">
            <td class="col-md-4">{{ this.title }}</td>
            <td class="col-md-4 overme">{{ this.description }}</td>
            <td class="col-md-4">&#8372;{{ this.price }}</td>
        </tr>
    {{/each}}
    </tbody>
</table>