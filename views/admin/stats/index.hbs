<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each functions }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <a class="thumbnail" href="/admin/stats/{{this.path}}">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
{{/each}}