<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Користувач</th>
        <th>Замовлення</th>
        <th>Адреса</th>
        <th>Ім'я</th>
        <th>Видалити</th>
    </tr>
    </thead>
    <tbody>
    {{# each orders }}
        <tr>
            <td>{{ this.userEmail }}</td>
            <td>
                {{# each this.cart.items }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">&#8372;{{ this.price }}</span>
                    </li>
                {{/each}}
            </td>
            <td>{{ this.address }}</td>
            <td>{{ this.name }}</td>
            <td>
                <a href="/admin/delete-order/{{this._id}}">
                    <i class="fa fa-times" aria-hidden="true"></i> Видалити
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>